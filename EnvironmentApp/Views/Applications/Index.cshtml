@model IEnumerable<EnvironmentApp.Models.Application>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1 class="text-center" style="padding-top:10px">Application List<span class="badge badge-pill badge-primary shadow">@Model.Count()</span></h1>

<p>
    @Html.ActionLink("New Application", "Create", null, new { @class= "btn btn-outline-primary shadow", style = "border-radius: 25px" })
</p>


<table class="table table-striped table-hover shadow">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appPOC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appSnowTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="">
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.appEnvName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appPOC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appSnowTeam)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.appCode}, new { @class = "btn btn-outline-primary btn-sm", style = "border-radius: 25px" }) |
                @Html.ActionLink("Details", "Details", new { id = item.appCode, @class = "btn btn-default" }, new { @class = "btn btn-outline-primary btn-sm", style = "border-radius: 25px" })
                @*@Html.ActionLink("Delete", "Delete", new { id = item.appCode, @class = "btn btn-default" })*@
            </td>
        </tr>
}
    </tbody>
</table>
