@model EnvironmentApp.Models.Standard
@using EnvironmentApp.Models;
@{
    var guid = Guid.NewGuid();
}

<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#@(guid)" aria-expanded="false" aria-controls="collapseOne">
                    @Model.sName Drives -
                </button>
            </h5>
        </div>

        <div id="@(guid)" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                @foreach (var d in Model.Drives)
                {
                    <p>C:@d.diskCName | @d.diskCSize Gb</p>
                    <p>D:@d.diskDName | @d.diskDSize Gb</p>
                    <p>E:@d.diskEName | @d.diskESize Gb</p>
                    <p>F:@d.diskFName | @d.diskFSize Gb</p>
                    <p>K:@d.diskKName | @d.diskKSize Gb</p>
                    <p>L:@d.diskLName | @d.diskLSize Gb</p>
                    <p>M:@d.diskMName | @d.diskMSize Gb</p>
                    <p>P:@d.diskPName | @d.diskPSize Gb</p>
                    <p>T:@d.diskTName | @d.diskTSize Gb</p>
                    <P>s:@d.diskSName | @d.diskSSize Gb</P>
                }
            </div>
        </div>
    </div>
</div>

